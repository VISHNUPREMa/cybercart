 
<%- include("../partials/header") %>
<style>
    #heading{
        text-align: center;
    
}
</style>
 <!-- card-header end// -->
                <div class="card-body">
                    
                   <!-- col// -->
                      <!-- col// -->
                     
                     <!-- col// -->
                     <!-- row // -->
                    <div class="row justify-content-center">
                        <h2 id="heading">Order Details</h2>
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th width="40%">order Id</th>
                                            <th width="40%">Product</th>
                                            <th width="20%">Unit Price</th>
                                            <th width="20%">Quantity</th>
                                            <th width="20%" class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(order){ %>
                                            <div class="info" id="orderid"><%= order._id %>  </div>
                                            <% for(i=0;i<order.products.length;i++){ %>
                                                
                                            <tr>
                                                
                                                <td>
                                                    <a class="itemside" href="#">
                                                        <div class="left">
                                                            <img src="/uploads/products/<%= order.products[i].image[0] %>" width="60" height="40" class="img-xs" alt="Item">
                                                        </div>

                                                        <div class="info"><%= order.products[i].name %>  </div>
                                                    </a>
                                                </td>
                                               
                                                <td> <%= order.cart[i].quantity %></td>
                                                <td class="text-end"> <%= order.totalprice  %> </td>
                                            </tr>
                                            
                                            <% } %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div> <!-- table-responsive// -->
                        </div> <!-- col-lg-12// -->
                    </div> 
                    
                    <div class="col-lg-3 col-md-3 ms-auto text-md">
                        <form action="" method="">
                            <!-- Hidden input field to store the order ID -->
                            
                            <button class="btn btn-primary" type="submit" id="cancelorder" name="cancelorder" value="Cancel Order">Cancel Order</button>
                        </form>
                    </div><!-- row// -->
                    <!-- row// -->
                    
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


       


        <script>   
            $(document).ready(function(){
                let cancelButton = $("#cancelorder");
                cancelButton.click(function(){
                    event.preventDefault();
                    const orderId = $("#orderid").text();
                 
                  

                    Swal.fire({
                    title: 'Are you sure?',
                    text: 'Do you want to cancel this order?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, cancel it!'
                   }).then((result)=>{
                    if(result.isConfirmed){
                      
                        $.ajax({
                            url:"/deleteorder",
                            method:"POST",
                            data:{
                                orderId:orderId
                            },
                            success:function(response){
                                Swal.fire({
                          position: "top-end",
                    icon: "success",
                      title: "Your order has been deleted",
                         showConfirmButton: false,
                         timer: 1500
                          }).then(()=>{
                            window.location.href = "/profile";
                          })
                            },
                            error:function(xhr, status, error){
                                console.error(error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong!'
                        });
                            }
                        })
                    }
                   })
                    
                })
            })

        </script>


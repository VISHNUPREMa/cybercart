<%- include("../partials/adminheader") %>

<div class="card mb-4">
    <header class="card-header">
        <h4 class="card-title">Sales Report</h4>
        <div class="row justify-content-end">
            <div class="col-md-4 col-12 mb-md-0 mb-3">
                <form action="/admin/salesreport" method="post">
                    <div class="row align-items-center">
                        <div class="col">
                            <input type="date" value="02.05.2022" class="form-control" name="date">
                        </div>
                        <div class="col">
                            <button class="btn btn-primary btn-block">Show</button>
                        </div>
                    </div>
                </form>
            </div>
        
            <div class="col-md-4 col-12 mb-md-0 md-3">
                <form action="/admin/salesreport" method="post">
                    <div class="row align-items-center">
                        <div class="col">
                            <select class="form-select" name="selectstatus">
                           
                                <option>Daily</option>
                                <option>weekly</option>
                                <option>monthly</option>
                            </select>
                        </div>
                        <div class="col">
                            <button class="btn btn-primary">Show</button>
                        </div>
                    </div>
                </form>
            </div>
            
        </div>
        
      
         
            
        
        </div>
        
    </header>
    <div class="card-body">
        <div class="table-responsive">
            <div class="table-responsive">
                <table class="table align-middle table-nowrap mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-center">
                                <div class="form-check align-middle">
                                    <input class="form-check-input" type="checkbox" id="transactionCheck01">
                                    <label class="form-check-label" for="transactionCheck01"></label>
                                </div>
                            </th>
                            <th class="align-middle" scope="col">Order ID</th>
                            <th class="align-middle" scope="col">Billing Name</th>
                            <th class="align-middle" scope="col">Date</th>
                            <th class="align-middle" scope="col">Total</th>
                            <th class="align-middle" scope="col">Payment Status</th>
                            <th class="align-middle" scope="col">Payment Method</th>
                            
                            
                        </tr>
                    </thead>
                    <tbody>

                        
                        <% if(orders){ %>
                            <% for(i=0 ; i< orders.length ; i++){ %>
                            <tr>
                                <td class="text-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="transactionCheck02">
                                        <label class="form-check-label" for="transactionCheck02"></label>
                                    </div>
                                </td>
                                <td><a href="#" class="fw-bold"><%= orders[i].orderId %></a> </td>
                                <td><%= orders[i].address[0].name %></td>
                                <td>
                                    <%= orders[i].createdon %>
                                </td>
                                <td>
                                    <%= orders[i].totalprice %>
                                </td>
                                <td>
                                    <span class="badge badge-pill badge-soft-success"><%= orders[i].status %></span>
                                </td>
                                <td>
                                    <i class="material-icons md-payment font-xxl text-muted mr-5"></i> <%= orders[i].payment %>
                                </td>
                                
                               
                            </tr>
                            <% } %>
                            <% } %>
                       
                    </tbody>
                </table>
            </div>
        </div> 
    </div>
</div>


